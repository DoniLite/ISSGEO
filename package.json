{
	"name": "bun-react-template",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/index.tsx",
		"generate:watch": "bun --watch generate",
		"start": "NODE_ENV=production bun src/index.tsx",
		"fmt": "bunx biome format --write",
		"lint": "bunx biome lint --write",
		"check": "bunx biome check --write",
		"build": "bun build:client && bun build:server",
		"build:all": "bun run build && bun build:default",
		"build:default": "bun run build.ts --outdir=static/dist/default --sourcemap=linked ",
		"build:client": "bun run build.ts --outdir=static/dist/client --minify --sourcemap=linked --target=browser --entrypoints=./src/client.tsx,",
		"build:server": "bun run build.ts --outdir=static/dist/server --sourcemap=external --splitting --format=esm --target=node --entrypoints=./src/index.ts,",
		"generate": "bunx @tanstack/router-cli generate",
		"purge:db": "docker compose down -v",
		"wake:docker": "docker compose up -d",
		"wake:db": "docker compose up db -d",
		"down:db": "docker compose down",
		"push:db": "bunx drizzle-kit push",
		"migrate:db": "bunx drizzle-kit migrate",
		"generate:migrations": "bunx drizzle-kit generate",
		"seed:auth": "bun ./scripts/seed_auth.ts",
		"seed:db": "bun seed:auth",
		"init:env": "bun ./scripts/init.ts",
		"init:all": "bun init:env && bun wake:db && bun push:db && bun seed:db"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.5",
		"@radix-ui/react-accordion": "^1.2.12",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-navigation-menu": "^1.2.14",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@tanstack/match-sorter-utils": "^8.19.4",
		"@tanstack/react-router": "^1.131.27",
		"@tanstack/react-table": "^8.21.3",
		"bun-plugin-tailwind": "^0.0.15",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.6",
		"embla-carousel-auto-scroll": "^8.6.0",
		"embla-carousel-autoplay": "^8.6.0",
		"embla-carousel-react": "^8.6.0",
		"hono": "^4.9.9",
		"i18next": "^25.4.2",
		"lucide-react": "^0.544.0",
		"pg": "^8.16.3",
		"react": "^19",
		"react-day-picker": "^9.9.0",
		"react-dom": "^19",
		"react-i18next": "^15.7.2",
		"reflect-metadata": "^0.2.2",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"tailwindcss-animate": "^1.0.7",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@tanstack/router-cli": "^1.131.27",
		"@types/bun": "latest",
		"@types/pg": "^8.15.5",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"conventional-changelog-atom": "^5.0.0",
		"drizzle-kit": "^0.31.5",
		"lefthook": "^1.13.6"
	}
}
